{
  "manifest_version": 2,
  "name": "R34 Tools",
  "version": "1.0.0",
  "description": "Download media, save pages with metadata, AMOLED theme for rule34.xxx",

  "incognito": "spanning",

  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "*://rule34.xxx/*",
    "*://*.rule34.xxx/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://rule34.xxx/*"],
      "js": [
        "modules/constants.js",
        "modules/settings-manager.js",
        "modules/dom-utils.js",
        "modules/video-loader.js",
        "modules/image-quality.js",
        "modules/media-extractor.js",
        "modules/ui-components.js",
        "modules/dimensions-overlay.js",
        "modules/download-tracker.js",
        "modules/saved-pages-tracker.js",
        "modules/download-indicators.js",
        "modules/download-handler.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_title": "Rule34.xxx Tools",
    "default_popup": "popup.html"
  },

  "commands": {
    "download-media": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Download highest quality media from current post"
    },
    "save-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save page for later (URL, tags, artists)"
    }
  },

  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  }
}
